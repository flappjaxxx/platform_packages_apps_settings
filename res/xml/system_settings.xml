<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.fj.StatusBar"
        android:title="@string/status_bar_title" />

     <PreferenceScreen
        android:key="navigation_bar"
        android:fragment="com.android.settings.fj.NavBar"
        android:title="@string/navigation_bar_title" />

     <Preference
        android:fragment="com.android.settings.fj.LockscreenTargets"
        android:key="lockscreen_targets"
        android:title="@string/lockscreen_target_title" />

<PreferenceScreen android:key="quicksettings_settings"
android:title="@string/quicksettings_title">
<intent android:action="android.intent.action.MAIN"
android:targetPackage="com.TwinBlade.quicksettingscontrolpanel"
android:targetClass="com.TwinBlade.quicksettingscontrolpanel.Main" />
</PreferenceScreen>

</PreferenceScreen>
